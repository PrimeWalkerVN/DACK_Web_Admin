<div class="ecommerce-widget">
	<div class="row">
		<!-- ============================================================== -->
		<!-- recent orders  -->
		<!-- ============================================================== -->
		<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
			<div class="card">
				<h5 class="card-header">Đơn hàng gần đây</h5>
				<div class="card-body p-0" style="margin: 20px;">
					<div class="table-responsive">
						<table id="myTable" class="table table-striped table-bordered first">
							<thead class="bg-light">
								<tr class="border-0">
									<th class="border-0">Tên khách hàng</th>
									<th class="border-0">Mã đơn hàng</th>
									<th class="border-0">Số lượng</th>
									<th class="border-0">Thành tiền</th>
									<th class="border-0">Thời gian đặt</th>
									<th class="border-0">Trạng thái</th>
								</tr>
							</thead>
							<tbody id="recent-orders-section">
								{{#each orders}}
								<tr>
									<td>{{this.name}}</td>
									<td>{{this._id}} </td>
									<td>{{this.totalQuantity}}</td>
									<td>{{this.totalPrice}}</td>
									<td>{{this.createOn}}</td>
									<td>{{this.statusString}}</td>
								</tr>
								{{/each}}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<!-- ============================================================== -->
		<!-- end recent orders  -->
		<!-- ============================================================== -->
	</div>
</div>
