<!-- Optional JavaScript -->
<script src="/vendor/jquery/jquery-3.3.1.min.js"></script>
<script src="/vendor/bootstrap/js/bootstrap.bundle.js"></script>
<script src="/vendor/slimscroll/jquery.slimscroll.js"></script>
<script src="/javascripts/main-js.js"></script>
<script src="/vendor/inputmask/js/jquery.inputmask.bundle.js"></script>

<script>
	$('#input-select-brand option').each(function () {
		if ($(this)[0].label == '{{productData.brand}}') {
			$(this).attr('selected', true);
		}
	});

	$('#input-select-type option').each(function () {
		if ($(this)[0].label == '{{productData.typeProduct}}') {
			$(this).attr('selected', true);
		}
	});

	$('#input-select-color input').each(function () {
		if ($(this)[0].value == '{{productData.color}}') {
			$(this).attr('checked', true);
		}
	});

	$('#preview-img-placeholder')
		.append('<img id="blah" alt="your image" width="100px" height="100px"/>');
	$('#blah').attr('src', '{{productData.imagePath}}');
	$('#blah').css('margin-bottom', '20px');

</script>

</body>

</html>