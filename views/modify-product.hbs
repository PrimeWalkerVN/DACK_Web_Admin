<h1>Chỉnh sửa sản phẩm</h1>
<div class="row">
	<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
		<div class="card">
			<div class="card-body">
				<div>
					<div class="form-group">
						<label>Tên sản phẩm</label>
						<input id="inputText3" type="text" value='{{productData.title}}' class="form-control">
					</div>
					<div class="form-group">
						<label for="inputText4" class="col-form-label">Giá sản phẩm</label>
						<input id="inputText4" type="number" value={{productData.price}} class="form-control" placeholder="">
					</div>
					<div class="form-group">
						<label class="col-form-label">Nhãn hiệu</label>
						<select class="form-control" id="input-select-brand" onload="dc.activeBrandOptions();">
							<option>Gucci</option>
							<option>H&M</option>
							<option>Pull&Bear</option>
							<option>Mango</option>
							<option>Routine</option>
						</select>
					</div>
					<div class="form-group">
						<label class="col-form-label">Gian hàng</label>
						<select class="form-control" id="input-select-type">
							<option>Áo len</option>
							<option>Áo thun</option>
							<option>Áo lót</option>
							<option>Áo sơ mi</option>
							<option>Áo khoác</option>
							<option>Quần tây</option>
							<option>Quần thể thao</option>
							<option>Quần jogger</option>
							<option>Váy</option>
							<option>Đầm</option>
							<option>Sneaker</option>
							<option>Giày cao cổ</option>
							<option>Giày cao gót</option>
						</select>
					</div>


					<div class="form-group">
						<label class="col-form-label">Màu sắc chủ đạo</label>
						<div class="fw-color-choose" id="input-select-color">
							<div class="cs-item">
								<input value="Hồng mạnh mẽ" type="radio" name="cs" id="pink-color" checked>
								<label class="cs-pink" for="pink-color">
								</label>
							</div>
							<div class="cs-item">
								<input value="Vàng gold" type="radio" name="cs" id="yellow-color">
								<label class="cs-yellow" for="yellow-color">
								</label>
							</div>
							<div class="cs-item">
								<input value="Trắng" type="radio" name="cs" id="white-color">
								<label class="cs-white" for="white-color">
								</label>
							</div>
							<div class="cs-item">
								<input value="Đen" type="radio" name="cs" id="black-color">
								<label class="cs-black" for="black-color">
								</label>
							</div>
							<div class="cs-item">
								<input value="Xanh da trời" type="radio" name="cs" id="blue-color">
								<label class="cs-blue" for="blue-color">
								</label>
							</div>
						</div>
					</div>

					<div id="preview-img-placeholder"></div>

					<div class="custom-file mb-3">
						<input type="file" class="custom-file-input" id="customFile">
						<label class="custom-file-label" for="customFile">Chọn hình ảnh cho sản phẩm</label>
					</div>

					<div id="error-dialogue" role="alert">

					</div>

					<div class="form-group">
						<div id="product-id" style="width: 0px; height: 0px; overflow:hidden" >{{productData._id}}</div>
						<button id="modify-product" class="btn btn-primary" type="submit">Lưu thay đổi</button>
						<a href="/products" class="btn btn-outline-light">Hủy bỏ</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- ============================================================== -->
<!-- end basic form  -->
<!-- ============================================================== -->

